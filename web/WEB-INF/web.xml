<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>MineSomeBlockServlet</servlet-name>
        <servlet-class>servlet.MineSomeBlockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MineSomeBlockServlet</servlet-name>
        <url-pattern>/mine</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecordMessageServlet</servlet-name>
        <servlet-class>servlet.RecordMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecordMessageServlet</servlet-name>
        <url-pattern>/record</url-pattern>
    </servlet-mapping>
</web-app>